ORG 0000H
LJMP INIT

ORG 0030H
	INIT:
	MOV TMOD, #20H
	MOV TH1, #0FDH
	MOV TL1, #0FDH
	SETB TR1
	MOV SCON, #50H
	SETB ES
	SETB EA
	
	MAIN:
	JNB RI, $
	CLR RI
	MOV A, SBUF
	MOV DPTR, #LED_CODE
	MOVC A, @A+DPTR
	MOV P0, A
	SJMP MAIN
	
	LED_CODE:
	DB 0x3F, 0x06, 0x5B, 0x4F, 0x66, 0x6D, 0x7D, 0x07, 0x7F, 0x6F
END
	
	
	